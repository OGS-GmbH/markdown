{
  "name": "@ogs-gmbh/markdown",
  "version": "1.1.3",
  "description": "A lightweight and extensible npm library for parsing, transforming, and rendering Markdown with a deterministic and specification-oriented approach. It is designed for reproducibility, performance, and seamless integration into modern JavaScript and TypeScript toolchains.",
  "keywords": [
    "markdown",
    "markdown-renderer",
    "md",
    "npm",
    "javascript",
    "typescript",
    "parser",
    "renderer",
    "text-processing",
    "content-processing",
    "commonmark",
    "lightweight",
    "extensible"
  ],
  "homepage": "https://github.com/OGS-GmbH/markdown",
  "bugs": "https://github.com/OGS-GmbH/markdown/issues",
  "license": "MIT",
  "author": "OGS GmbH",
  "contributors": [
    {
      "name": "Simon Kovtyk",
      "email": "simon@kovtyk.com",
      "url": "https://simonkov.dev"
    }
  ],
  "exports": {
    ".": {
      "types": "./public-api.d.ts",
      "default": "./public-api.mjs"
    }
  },
  "main": "./public-api.mjs",
  "types": "./public-api.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/OGS-GmbH/markdown"
  },
  "type": "module",
  "scripts": {
    "ci:build:main:production": "node .esbuild/build.mjs",
    "ci:docs:extract:typedoc": "typedoc",
    "ci:docs:main:vitepress": "bash ./.vitepress/scripts/pre-vitepress.sh && vitepress build .vitepress",
    "ci:pr:commitlint:main:commitlint": "commitlint",
    "ci:pr:lint:main:eslint": "eslint .",
    "prepare": "husky",
    "vitepress": "bash ./.vitepress/scripts/pre-vitepress.sh && vitepress dev .vitepress",
    "vitepress:preview": "vitepress preview .vitepress"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.28.0",
    "@eslint/json": "^0.6.0",
    "@eslint/markdown": "^6.5.0",
    "@ogs-gmbh/linter": "^1.3.2",
    "@ogs-gmbh/vitepress-plugin-sidebar": "^1",
    "@ogs-gmbh/vitepress-theme": "^1",
    "@stylistic/eslint-plugin-js": "^2.13.0",
    "@stylistic/eslint-plugin-plus": "^2.13.0",
    "@stylistic/eslint-plugin-ts": "^2.13.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^25.0.2",
    "commitizen": "^4.3.1",
    "esbuild": "^0.27.1",
    "esbuild-plugin-d.ts": "^1.3.1",
    "esbuild-plugin-file-copy": "2.0.0-next.0",
    "esbuild-plugin-file-path-extensions": "^2.1.4",
    "esbuild-plugin-package-json": "^2.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-unicorn": "^56.0.1",
    "fast-glob": "^3.3.3",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "npm-package-json-lint": "^8.0.0",
    "sass-embedded": "^1.97.3",
    "typedoc": "^0.28.14",
    "typedoc-plugin-frontmatter": "^1.3.1",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.34.0",
    "vitepress": "^1",
    "vitepress-plugin-group-icons": "^1.6.5"
  },
  "sideEffects": false,
  "publishConfig": {
    "directory": "dist/main"
  }
}
